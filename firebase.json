{
  "functions": {
    "runtime": "nodejs18",
    "source": "backend",
    "codebase": "default",
    "ignore": [
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "hosting": {
    "public": "frontend/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "function": {
          "functionId": "backend",
          "pinTag": true
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
